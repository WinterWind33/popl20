    "version": "0.2.0",
    "configurations": [
        {
            "name": "[LINUX] (Testing) Launch popl20 Tests",
            "type": "cppdbg",
            "request": "launch",
            "cwd": "${workspaceRoot}/bin",
            "program": "${workspaceRoot}/bin/popl_test",
            "args": [
                "-b",
                "-s"
            ],
            "preLaunchTask": "[BUILD][Debug] Build Tests",
            "presentation": {
                "hidden": false,
                "group": "Tests",
                "order": 1
            }
        },
        {
            "name": "[WINDOWS] (Testing) Launch popl20 Tests",
            "type": "cppvsdbg",
            "request": "launch",
            "cwd": "${workspaceRoot}/bin",
            "program": "${workspaceRoot}/bin/popl_test",
            "args": [
                "-b",
                "-s"
            ],
            "preLaunchTask": "[BUILD][Debug] Build Tests",
            "presentation": {
                "hidden": false,
                "group": "Tests",
                "order": 1
            },
            "console": "externalTerminal"
        }
    ]
}
